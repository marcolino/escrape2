extends ../layout

block content
  h1.
    Person ID #{person._id}
  form(action='/persons/#{person._id}/edit',method='post',name='updateperson',enctype='application/x-www-form-urlencoded')
    p Name: 
      input#inputName(type='text', value='#{person.name}', name='name')
    p Vote: 
      input#inputVote(type='number', value='#{person.vote}', name='vote')
    p DateOfCreation: 
      input#inputDateIfCreation(type='date', value='#{persondateofcreation}', name='dateofcreation')
    p Are you Loved?: 
      input#inputIsLoved(type='checkbox', name='isloved', checked=('#{person.isloved}'==='true' ? "checked" : undefined))
    p 
      input(type='hidden',value='PUT',name='_method')
    p 
      button#btnSubmit(type='submit').
        Update